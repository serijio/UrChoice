<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/room_pin_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gotohome" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/rojo"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rojo" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/azul"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/azul" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/room_pin_textinputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:paddingStart="50dp"
            android:paddingTop="0dp"
            android:paddingEnd="50dp"
            android:paddingBottom="25dp"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@null"
            app:hintTextColor="#FEFEFE">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pin_room_textEdittextlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="center"
                android:hint="PIN"
                android:textAlignment="center"
                android:cursorVisible="false"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/enter_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="30dp"
            android:text="ENTER PIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@null"
            android:background="@drawable/tap_to_start_rec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

</RelativeLayout>
