<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/waiting_players_background"
        android:layout_width="375dp"
        android:layout_height="320dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/alert_dialog" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/rojo"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rojo" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/azul"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/azul" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/room_pin_textinputlayout"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:layout_marginTop="155dp"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@null" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pin_room_textEdittextlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:hint="@string/pin"
                android:cursorVisible="false"
                style="@style/profile_text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enter_room_pin"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="232dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="@string/enter_pin"
            app:backgroundTint="@null"
            android:background="@drawable/tap_to_start_rec"
            style="@style/profile_text" />

    </RelativeLayout>
</RelativeLayout>