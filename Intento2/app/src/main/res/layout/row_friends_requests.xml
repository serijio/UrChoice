<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRequests"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ranking_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp" >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/requests_image"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/a"
                app:shapeAppearanceOverlay="@style/FriendsImageCustomShape" />

            <TextView
                android:id="@+id/requests_name"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:text="@string/lukinda"
                android:textSize="13sp"
                style="@style/FriendsUsernameStyle" />

            <TextView
                android:id="@+id/requests_email"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="@string/lukinda_mail"
                android:textSize="6sp"
                style="@style/FriendsEmailStyleLeft" />

            <ImageView
                android:id="@+id/accept_request"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:paddingTop="18dp"
                android:paddingEnd="20dp"
                android:paddingBottom="18dp"
                android:src="@drawable/accept_request" />

            <ImageView
                android:id="@+id/decline_request"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:paddingTop="18dp"
                android:paddingEnd="20dp"
                android:paddingBottom="18dp"
                android:src="@drawable/decline_request" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>