<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragments.ProfileFragment"
    android:id="@+id/my_profile" >

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        android:elevation="1dp"
        app:layout_constraintBottom_toTopOf="@id/h300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h301"
        app:layout_constraintBottom_toTopOf="@id/h302"
        app:layout_constraintStart_toEndOf="@id/v300"
        app:layout_constraintEnd_toStartOf="@id/v301"
        android:elevation="1dp"
        android:background="@drawable/user_info_container" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h303"
        app:layout_constraintBottom_toTopOf="@id/h304"
        app:layout_constraintStart_toEndOf="@id/v302"
        app:layout_constraintEnd_toStartOf="@id/v303"
        android:elevation="1dp"
        android:text="@string/profile_fragment"
        style="@style/FragmentName" />

    <TextView
        android:id="@+id/games"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/h305"
        app:layout_constraintTop_toTopOf="@id/h307"
        app:layout_constraintRight_toRightOf="@id/v304"
        app:layout_constraintLeft_toLeftOf="@id/v305"
        style="@style/profile_number" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/h306"
        app:layout_constraintTop_toTopOf="@id/h305"
        app:layout_constraintRight_toRightOf="@id/v304"
        app:layout_constraintLeft_toLeftOf="@id/v305"
        style="@style/profile_text"
        android:text="PARTIDAS JUGADAS" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/h306"
        app:layout_constraintTop_toTopOf="@id/h305"
        app:layout_constraintRight_toRightOf="@id/v303"
        app:layout_constraintLeft_toLeftOf="@id/v304"
        style="@style/profile_text"
        android:text="AMIGOS" />

    <TextView
        android:id="@+id/friends"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/h305"
        app:layout_constraintTop_toTopOf="@id/h307"
        app:layout_constraintRight_toRightOf="@id/v303"
        app:layout_constraintLeft_toLeftOf="@id/v304"
        style="@style/profile_number" />

    <ImageView
        android:id="@+id/profile_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        android:elevation="0dp"
        android:alpha="0.6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_categories_button"
        android:layout_width="190dp"
        android:layout_height="60dp"
        app:backgroundTint="@null"
        style="@style/FriendRequests"
        android:text="MY CATEGORIES"
        app:layout_constraintBottom_toTopOf="@+id/h309"
        app:layout_constraintRight_toRightOf="@+id/v308"
        app:layout_constraintStart_toStartOf="@+id/v300"
        app:layout_constraintTop_toTopOf="@+id/h302" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/logout"
        app:backgroundTint="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/h302"
        app:layout_constraintLeft_toLeftOf="@id/v307"
        app:layout_constraintBottom_toBottomOf="@id/h309" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/h309"
        app:layout_constraintBottom_toBottomOf="@id/h308"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/profileborder"
            app:strokeWidth="10dp"
            app:strokeColor="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/edit"
            app:backgroundTint="@null"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="140dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/h310"
        app:layout_constraintBottom_toBottomOf="@id/h311"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileName_textinputlayout"
            android:layout_width="190dp"
            android:layout_height="wrap_content" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profileName_edittext"
                style="@style/profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editnew_namebutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/edit"
            app:backgroundTint="@null"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="200dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setnew_namebutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/check_button"
            app:backgroundTint="@null"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="200dp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/profilemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/h307"
        app:layout_constraintTop_toTopOf="@id/h311"
        style="@style/profile_text" />


    <!--Constraints verticales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v301"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v302"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v303"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v304"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v305"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v306"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v307"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v308"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />



    <!--Constraints horizontales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h301"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h302"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h303"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h304"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h305"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h306"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h307"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h308"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h309"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h310"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h311"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h312"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h313"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />
</androidx.constraintlayout.widget.ConstraintLayout>