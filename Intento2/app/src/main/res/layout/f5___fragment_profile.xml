<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_profile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragments.ProfileFragment" >

    <!--Bg-->


    <!--Top-->
    <ImageView
        android:id="@+id/profile_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h205"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/h205"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h206"
        app:layout_constraintBottom_toTopOf="@id/h207"
        app:layout_constraintStart_toEndOf="@id/v134"
        app:layout_constraintEnd_toStartOf="@id/v135"
        android:background="@drawable/user_info_container" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h208"
        app:layout_constraintBottom_toTopOf="@id/h209"
        app:layout_constraintStart_toEndOf="@id/v136"
        app:layout_constraintEnd_toStartOf="@id/v137"
        android:text="@string/profile_fragment"
        style="@style/FragmentName" />


    <!--Contenido-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_categories_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h210"
        app:layout_constraintBottom_toTopOf="@id/h211"
        app:layout_constraintStart_toEndOf="@id/v138"
        app:layout_constraintEnd_toStartOf="@id/v139"
        android:background="@drawable/my_cat_button"
        app:backgroundTint="@null"
        android:text="@string/my_cat"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/orbiblack" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h210"
        app:layout_constraintBottom_toTopOf="@id/h211"
        app:layout_constraintStart_toEndOf="@id/v140"
        app:layout_constraintEnd_toStartOf="@id/v141"
        android:background="@drawable/logout"
        app:backgroundTint="@null" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h212"
        app:layout_constraintBottom_toTopOf="@id/h213"
        app:layout_constraintStart_toEndOf="@id/v142"
        app:layout_constraintEnd_toStartOf="@id/v143"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ProfileImageCustomShape"
        app:strokeWidth="10dp"
        app:strokeColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_profile_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h214"
        app:layout_constraintBottom_toTopOf="@id/h215"
        app:layout_constraintStart_toEndOf="@id/v144"
        app:layout_constraintEnd_toStartOf="@id/v145"
        android:background="@drawable/edit"
        app:backgroundTint="@null" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profileName_textinputlayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h216"
        app:layout_constraintBottom_toTopOf="@id/h217"
        app:layout_constraintStart_toEndOf="@id/v146"
        app:layout_constraintEnd_toStartOf="@id/v147"
        android:textAlignment="center"
        style="@style/ProfileNameStyle" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profileName_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/orbiblack"
            android:textSize="22sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/editnew_namebutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h218"
        app:layout_constraintBottom_toTopOf="@id/h219"
        app:layout_constraintStart_toEndOf="@id/v148"
        app:layout_constraintEnd_toStartOf="@id/v149"
        android:background="@drawable/edit"
        app:backgroundTint="@null" />

    <com.google.android.material.button.MaterialButton
