        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h218"
        app:layout_constraintBottom_toTopOf="@id/h219"
        app:layout_constraintStart_toEndOf="@id/v148"
        app:layout_constraintEnd_toStartOf="@id/v149"
        android:background="@drawable/check_button"
        app:backgroundTint="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/profilemail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h220"
        app:layout_constraintBottom_toTopOf="@id/h221"
        app:layout_constraintStart_toEndOf="@id/v146"
        app:layout_constraintEnd_toStartOf="@id/v147"
        style="@style/ProfileEmailStyle" />

    <TextView
        android:id="@+id/games"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h222"
        app:layout_constraintBottom_toTopOf="@id/h223"
        app:layout_constraintStart_toEndOf="@id/v150"
        app:layout_constraintEnd_toStartOf="@id/v151"
        style="@style/ProfilePlayedFriendsBigStyle" />

    <TextView
