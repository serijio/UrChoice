<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Screens_activities.TapToStartScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/line1"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:src="@drawable/redline"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:src="@drawable/blueline"
            android:layout_toRightOf="@id/line1" />

        <ImageView
            android:id="@+id/line3"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:src="@drawable/redline"
            android:layout_toRightOf="@id/line2" />

        <ImageView
            android:id="@+id/line4"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:src="@drawable/blueline"
            android:layout_toRightOf="@id/line3" />

        <ImageView
            android:id="@+id/line5"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:src="@drawable/redline"
            android:layout_toRightOf="@id/line4" />

        <ImageView
            android:id="@+id/line6"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:src="@drawable/blueline"
            android:layout_toRightOf="@id/line5" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/line7"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/redline"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/line8"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:src="@drawable/blueline"
            android:layout_toLeftOf="@id/line7"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/line9"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:src="@drawable/redline"
            android:layout_toLeftOf="@id/line8"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/line10"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:src="@drawable/blueline"
            android:layout_toLeftOf="@id/line9"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/line11"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:src="@drawable/redline"
            android:layout_toLeftOf="@id/line10"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/line12"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:src="@drawable/blueline"
            android:layout_toLeftOf="@id/line11"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rojo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h1"
        app:layout_constraintBottom_toTopOf="@id/h2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/rojo" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/azul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h2"
        app:layout_constraintBottom_toTopOf="@id/h3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/azul" />

    <ImageView
        android:id="@+id/bluecard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h4"
        app:layout_constraintBottom_toTopOf="@id/h5"
        app:layout_constraintStart_toEndOf="@id/v1"
        app:layout_constraintEnd_toStartOf="@id/v2"
        android:src="@drawable/tap_blue_card" />

    <ImageView
        android:id="@+id/redcard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h6"
        app:layout_constraintBottom_toTopOf="@id/h7"
        app:layout_constraintStart_toEndOf="@id/v3"
        app:layout_constraintEnd_toStartOf="@id/v4"
        android:src="@drawable/tap_red_card" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/splash_app_title"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintTop_toBottomOf="@id/h8"
        app:layout_constraintBottom_toTopOf="@id/h9"
        app:layout_constraintStart_toEndOf="@id/v5"
        app:layout_constraintEnd_toStartOf="@id/v6"
        android:text="@string/app_title"
        style="@style/SplashScreenStyle" />


    <!--Constraints verticales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82" />


    <!--Constraints horizontales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />

</androidx.constraintlayout.widget.ConstraintLayout>