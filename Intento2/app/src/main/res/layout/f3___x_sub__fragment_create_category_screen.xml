<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:id="@+id/uwu"
    tools:context=".Fragments.CreateCategorySubFragment" >

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/h158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/blue" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h159"
        app:layout_constraintBottom_toTopOf="@id/h160"
        app:layout_constraintStart_toEndOf="@id/v106"
        app:layout_constraintEnd_toStartOf="@id/v107"
        android:background="@drawable/user_info_container" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h161"
        app:layout_constraintBottom_toTopOf="@id/h162"
        app:layout_constraintStart_toEndOf="@id/v108"
        app:layout_constraintEnd_toStartOf="@id/v109"
        android:text="@string/category"
        style="@style/FragmentName" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/create_category_background"
        app:layout_constraintBottom_toTopOf="@id/h164"
        app:layout_constraintEnd_toStartOf="@id/v111"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/v110"
        app:layout_constraintTop_toBottomOf="@id/h163"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_cat_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColorHint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/h165"
        app:layout_constraintBottom_toTopOf="@id/h166"
        app:layout_constraintStart_toEndOf="@id/v112"
        app:layout_constraintEnd_toStartOf="@id/v113"
        app:boxCornerRadiusTopStart="0dp"
        app:boxCornerRadiusTopEnd="0dp"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusBottomEnd="0dp"
        style="@style/CreateCategoryInputStyle" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_cat_name_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/insert_name"
            android:inputType="text"
            android:textColor="@color/red"
            android:fontFamily="@font/orbimedium"
            android:textColorHint="@color/red"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--Mirar si se puede poner el scaletype con java-->

    <ImageView
        android:id="@+id/add_new_category_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h167"
        app:layout_constraintBottom_toTopOf="@id/h168"
        app:layout_constraintStart_toEndOf="@id/v112"
        app:layout_constraintEnd_toStartOf="@id/v113"
        android:layout_margin="2dp"
        android:scaleType="centerCrop" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_new_category_image_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h167"
        app:layout_constraintBottom_toTopOf="@id/h168"
        app:layout_constraintStart_toEndOf="@id/v112"
        app:layout_constraintEnd_toStartOf="@id/v113"
        android:background="@drawable/red_border2"
        android:fontFamily="@font/orbimedium"
        android:text="@string/insert_image"
        android:textAlignment="textStart"
        android:textColor="@color/red"
        android:textSize="18sp"
        app:backgroundTint="@null"
        style="@style/CategoryAddFieldsButtons" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_new_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h169"
        app:layout_constraintBottom_toBottomOf="@id/h170"
        app:layout_constraintStart_toEndOf="@id/v112"
        app:layout_constraintEnd_toStartOf="@id/v113"
        android:text="@string/insert_card"
        app:icon="@drawable/add_icon"
        app:iconTint="@color/red"
        app:iconGravity="end"
        style="@style/CategoryAddFieldsButtons" />

    <View
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/red_border2"
        app:layout_constraintBottom_toTopOf="@id/h172"
        app:layout_constraintEnd_toStartOf="@id/v113"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/v112"
        app:layout_constraintTop_toBottomOf="@id/h171"
        app:layout_constraintVertical_bias="0.372" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h173"
        app:layout_constraintBottom_toTopOf="@id/h174"
        app:layout_constraintStart_toEndOf="@id/v114"
        app:layout_constraintEnd_toStartOf="@id/v115"
        android:text="@string/card_data"
        style="@style/CreateCategoryText" />

    <TextView
        android:id="@+id/empty_card_views_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h175"
        app:layout_constraintBottom_toTopOf="@id/h176"
        app:layout_constraintStart_toEndOf="@id/v114"
        app:layout_constraintEnd_toStartOf="@id/v115"
        android:text="@string/no_cards_yet_minus"
        android:visibility="invisible"
        style="@style/CreateEditCategoryRecyclerText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_card_category"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@id/h175"
        app:layout_constraintBottom_toTopOf="@id/h176"
        app:layout_constraintStart_toEndOf="@id/v114"
        app:layout_constraintEnd_toStartOf="@id/v115"
        android:orientation="horizontal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_new_category_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h177"
        app:layout_constraintBottom_toTopOf="@id/h178"
        app:layout_constraintStart_toEndOf="@id/v112"
        app:layout_constraintEnd_toStartOf="@id/v113"
        android:text="@string/create_cat"
        style="@style/CategoryButtonsRed" />


    <!--Constraints verticales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v107"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v108"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v109"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v110"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v112"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.81" />


    <!--Constraints horizontales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h158"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h159"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h160"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h161"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h162"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h163"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h164"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h165"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h166"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h167"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h168"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h169"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.516" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h170"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.589" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h171"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h172"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h173"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h174"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h175"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h176"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h177"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h178"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />

</androidx.constraintlayout.widget.ConstraintLayout>