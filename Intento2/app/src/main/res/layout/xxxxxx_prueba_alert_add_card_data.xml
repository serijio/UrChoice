<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="375dp"
        android:layout_height="500dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/alert_dialog2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/rojo"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="110dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rojo" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/azul"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/azul" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/card_image_data"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:background="@drawable/circle_image"
            android:elevation="1dp"
            android:src="@drawable/navbar_add"
            android:scaleType="centerCrop"
            app:riv_corner_radius="80dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/card_textinputlayout"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:layout_marginTop="330dp"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@null" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/card_textEdittextlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:hint="@string/card_name"
                android:cursorVisible="false"
                style="@style/profile_text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/set_data_alert_addcard_button"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="412dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:text="@string/insert_card"
            app:backgroundTint="@null"
            android:background="@drawable/tap_to_start_rec"
            style="@style/profile_text" />

    </RelativeLayout>
</RelativeLayout>