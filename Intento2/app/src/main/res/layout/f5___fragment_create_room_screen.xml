<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragments.CreateRoomFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#38E1FC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/h702" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="@string/room"
        app:layout_constraintLeft_toLeftOf="@id/v700"
        app:layout_constraintRight_toRightOf="@id/v701"
        app:layout_constraintTop_toTopOf="@id/h700"
        app:layout_constraintBottom_toBottomOf="@id/h701" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_topic_retangle"
        app:layout_constraintTop_toTopOf="@id/h700"
        app:layout_constraintBottom_toBottomOf="@id/h701"
        app:layout_constraintLeft_toLeftOf="@id/v700"
        app:layout_constraintRight_toRightOf="@id/v701" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="@id/h703"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/h704" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/top_blue_border" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                android:background="#ED3B3B">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ROOM NAME"
                        android:textColorHint="@color/black"
                        android:background="@drawable/black_border" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--<com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:id="@+id/inputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:paddingLeft="50dp"
                    android:paddingTop="25dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="25dp"
                    app:hintEnabled="false">

                    <AutoCompleteTextView
                        android:id="@+id/category_list"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="CHOOSE CATEGORY"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>-->

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/black"
                        android:background="@drawable/black_border"
                        android:hint="PIN"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/Spinner01"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="25dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/create_room_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/button_blue_border"
                android:text="CREATE"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

        </LinearLayout>
    </LinearLayout>


    <!--Constraints verticales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v701"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v702"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v703"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />


    <!--Constraints horizontales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h701"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h702"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h703"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h704"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>