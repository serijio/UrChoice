<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="StartScreenStyle">
        <item name="android:textSize">55sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/baloomedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="SplashScreenStyle">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/baloomedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="SloganStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/orbimedium</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TapToStartStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1</item>
        <item name="fontFamily">@font/orbimedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="SignUpStyle">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/orbiblack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginStyle">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/orbiblack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginSubmitFields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">#00000000</item>
        <item name="boxStrokeColor">@color/text_input_outline_color_red</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SignUpSubmitFields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">#00000000</item>
        <item name="boxStrokeColor">@color/text_input_outline_color_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/blue</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemRippleColor">@color/red</item>
        <item name="startIconTint">@color/black</item>
        <item name="android:state_selected">true</item>
        <item name="itemActiveIndicatorStyle">@style/activeIndicator</item>
    </style>

    <style name="activeIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/red</item>
    </style>

    <style name="TopUserInfoNickname">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/orbiblack</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TopUserInfoEmail">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/orbimedium</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TopUserInfoGames">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/orbiblack</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="FragmentName">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/orbiblack</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="MyHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>