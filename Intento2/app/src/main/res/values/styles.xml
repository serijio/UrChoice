<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="SignUpStyle">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/orbiblack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginStyle">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/orbiblack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginSubmitFields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">#00000000</item>
        <item name="boxStrokeColor">@color/red</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">25sp</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:strokeColor">@color/red</item>
    </style>

</resources>